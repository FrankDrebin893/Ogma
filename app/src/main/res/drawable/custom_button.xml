            <stroke android:color="@color/stroke"
                android:width="2px"
                />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/wrong_red"/>
            <stroke android:color="@color/stroke" android:width="2px"/>
        </shape>
    </item>


    <item>
        <shape>
            <stroke android:color="@color/stroke"
                android:width="2px"/>
            <solid android:color="@color/custom_button_background"/>

        </shape>

    </item>
