<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.littlewitgames.theelderscrollsquiz.QuizActivity"
    android:background="@drawable/background4">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_standard_question"
        android:id="@+id/standardQuestionFragment"
        android:name="com.littlewitgames.theelderscrollsquiz.StandardQuestionFragment"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_score_screen"
        android:id="@+id/scoreScreenFragment"
        android:name="com.littlewitgames.theelderscrollsquiz.ScoreScreenFragment" />

    <fragment
        android:id="@+id/adFragment"
        android:name="com.littlewitgames.theelderscrollsquiz.AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_ad"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
